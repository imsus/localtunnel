{
  "name": "localtunnel",
  "version": "3.0.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "lint": "oxlint .",
    "fmt": "oxfmt --write .",
    "check": "oxlint . && oxfmt --check . && bun test",
    "compile": "bun run --filter '*' compile"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "effect": "^3.0.0",
    "oxfmt": "latest",
    "oxlint": "latest"
  }
}
