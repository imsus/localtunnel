{
  "name": "localtunnel",
  "version": "3.0.0",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "lint": "oxlint .",
    "fmt": "oxfmt --write .",
    "check": "oxlint . && oxfmt --check . && bun test",
    "build": "bun bundle",
    "build:client": "cd packages/client && bun run build",
    "build:server": "cd packages/server && bun run build",
    "compile:client": "cd packages/client && bun run compile",
    "compile:server": "cd packages/server && bun run compile",
    "compile": "bun run compile:client && bun run compile:server"
  },
  "devDependencies": {
    "effect": "^3.0.0",
    "oxfmt": "latest",
    "oxlint": "latest"
  }
}
