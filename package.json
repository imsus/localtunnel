{
  "name": "localtunnel",
  "description": "Expose localhost to the world. A modern, Bun-native localtunnel implementation with TypeScript and Effect.ts.",
  "keywords": [
    "bun",
    "localtunnel",
    "tunnel",
    "typescript",
    "monorepo",
    "effect-ts",
    "reverse-proxy",
    "expose-localhost",
    "dev-tools"
  ],
  "author": "Imam Susanto <abc.imams@gmail.com>",
  "version": "3.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "effect": "^3.19.14",
      "picocolors": "^1.1.1",
      "pino": "^10.1.1"
    },
    "catalogs": {
      "dev": {
        "pino-pretty": "^13.1.3"
      }
    }
  },
  "type": "module",
  "scripts": {
    "test": "bun test",
    "test:e2e": "bun test test/e2e.test.ts",
    "test:coverage": "bun test --coverage",
    "lint": "oxlint .",
    "fmt": "oxfmt --write .",
    "check": "oxlint . && oxfmt --check . && bun test",
    "typecheck": "npx tsc --noEmit",
    "compile": "bun run --filter '*' compile",
    "link": "bun run compile && (cd packages/client && bun link) && (cd packages/server && bun link)",
    "unlink": "(cd packages/client && bun unlink) && (cd packages/server && bun unlink)",
    "install:cli": "chmod +x scripts/install-cli.sh && ./scripts/install-cli.sh"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.6",
    "effect": "catalog:",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "typescript": "^5.9.3"
  }
}
